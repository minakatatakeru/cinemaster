<div class='container px-5 px-sm-0'>
  <div class='row'>
    <table class='table'>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
       <tr>
        <% @customers.each do |customer| %>
          <td><%= image_tag customer.get_profile_image, size: '50x50' %></td>
          <td><%= customer.name %></td>
          <td><% if current_customer.admin? && !current_customer?(customer) %>
      |       <%= link_to "delete", customer_path(customer.id), method: :delete, data: { confirm: "You sure?" } %>
              <% end %>
          </td>
        <% end %>
       </tr>
     </tbody>
    </table>
  </div>
</div>

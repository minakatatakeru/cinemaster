<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-2'><u><h4>ユーザー一覧</h4></u></div>
     <div class='col-md-8'>
     <table class='table table-hover table-inverse'>
      <thead>
        <tr class="table-info">
          <th>ユーザーアイコン</th>
          <th>名前</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
         <tr>
          <% @customers.each do |customer| %>
            <td><%= image_tag customer.get_profile_image, size: '50x50' %></td>
            <td><%= customer.name %></td>
            <td><% if current_customer.admin? && !current_customer?(customer) %>
        |       <%= link_to "delete", customer_path(customer.id), method: :delete, data: { confirm: "本当に消しますか?" }, class: "btn btn-sm btn-danger" %>
                <% end %>
            </td>
          <% end %>
         </tr>
       </tbody>
      </table>
     </div>
   <div class='col-md-2'></div>
  </div>
</div>
